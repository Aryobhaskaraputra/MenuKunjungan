<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:id="@+id/section1">
            <TextView
                android:id="@+id/header1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail Pencarian"
                android:fontFamily="@font/plusjakartasansrextrabold"
                android:textSize="16dp"
                android:textColor="@color/colorBlackHeader"/>
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header1"
                android:text="ID Aplikasi / Nama Nasabah"
                android:fontFamily="@font/plusjakartasansregular"
                android:textSize="14dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/field_text1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/text1"
                android:layout_marginTop="10dp"
                android:background="@drawable/form_shape"
                android:drawableEnd="@drawable/ic_search"
                android:fontFamily="@font/plusjakartasansmedium"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="89123124123"
                android:textSize="16dp"></EditText>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="24dp"
                    android:id="@+id/section2"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/header2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Informasi Kunjungan Nasabah"
                        android:fontFamily="@font/plusjakartasansrextrabold"
                        android:textSize="16dp"
                        android:textColor="@color/colorBlackHeader"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/header_nama_nasabah"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nama Nasabah"
                            android:fontFamily="@font/plusjakartasansregular"
                            android:textSize="14dp"
                            android:layout_marginTop="10dp"/>
                        <EditText
                            android:id="@+id/field_nama_nasabah"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="10dp"
                            android:hint="Input Nama Nasabah"
                            android:textColorHint="@color/colorNeutral200"
                            android:background="@drawable/form_shape"
                            android:fontFamily="@font/plusjakartasansmedium"
                            android:textSize="16dp"
                            android:paddingStart="15dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/header_lokasi_dikunjungi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lokasi yang dikunjugi"
                            android:fontFamily="@font/plusjakartasansregular"
                            android:textSize="14dp"
                            android:layout_marginTop="10dp"/>
                        <EditText
                            android:id="@+id/field_lokasi_dikunjungi"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="10dp"
                            android:hint="Input Lokasi yang dikunjungi"
                            android:textColorHint="@color/colorNeutral200"
                            android:background="@drawable/form_shape"
                            android:fontFamily="@font/plusjakartasansmedium"
                            android:textSize="16dp"
                            android:paddingStart="15dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/header_tanggal_kunjungan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tanggal Kunjungan"
                            android:fontFamily="@font/plusjakartasansregular"
                            android:textSize="14dp"
                            android:layout_marginTop="10dp"/>
                        <EditText
                            android:id="@+id/field_tanggal_kunjungan"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="10dp"
                            android:hint="Masukan Tanggal"
                            android:textColorHint="@color/colorNeutral200"
                            android:background="@drawable/form_shape"
                            android:fontFamily="@font/plusjakartasansmedium"
                            android:textSize="16dp"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:drawableEnd="@drawable/ic_calendar"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/header_alamat_usaha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alamat Usaha"
                            android:fontFamily="@font/plusjakartasansregular"
                            android:textSize="14dp"
                            android:layout_marginTop="10dp"/>
                        <EditText
                            android:id="@+id/field_alamat_usaha"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="10dp"
                            android:hint="Cari Alamat Usaha"
                            android:textColorHint="@color/colorNeutral200"
                            android:background="@drawable/form_shape"
                            android:fontFamily="@font/plusjakartasansmedium"
                            android:textSize="16dp"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/header_kodepos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kode Pos"
                            android:fontFamily="@font/plusjakartasansregular"
                            android:textSize="14dp"
                            android:layout_marginTop="10dp"/>
                        <EditText
                            android:id="@+id/field_kodepos"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="10dp"
                            android:hint="Cari Kode Pos"
                            android:textColorHint="@color/colorNeutral200"
                            android:background="@drawable/form_shape"
                            android:fontFamily="@font/plusjakartasansmedium"
                            android:textSize="16dp"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/header_kota"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kota"
                            android:fontFamily="@font/plusjakartasansregular"
                            android:textSize="14dp"
                            android:layout_marginTop="10dp"/>
                        <EditText
                            android:id="@+id/field_kota"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="10dp"
                            android:hint="Cari Kota"
                            android:textColorHint="@color/colorNeutral200"
                            android:background="@drawable/form_shape"
                            android:fontFamily="@font/plusjakartasansmedium"
                            android:textSize="16dp"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/header_negara"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Negara"
                            android:fontFamily="@font/plusjakartasansregular"
                            android:textSize="14dp"
                            android:layout_marginTop="10dp"/>
                        <EditText
                            android:id="@+id/field_negara"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="10dp"
                            android:hint="Cari Negara"
                            android:textColorHint="@color/colorNeutral200"
                            android:background="@drawable/form_shape"
                            android:fontFamily="@font/plusjakartasansmedium"
                            android:textSize="16dp"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"/>
                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_below="@+id/field_column_4"
                        android:background="@drawable/btn_black"
                        android:layout_marginTop="12dp"
                        android:text="Tag Lokasi"
                        android:fontFamily="@font/plusjakartasansbold"
                        android:id="@+id/btn_tag_lokasi"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/text6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Orang Ditemui"
                            android:fontFamily="@font/plusjakartasansregular"
                            android:textSize="14dp"
                            android:layout_marginTop="10dp"/>
                        <EditText
                            android:id="@+id/field_orang_ditemui"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_below="@id/text6"
                            android:layout_marginTop="10dp"
                            android:hint="Input Orang yang di temui"
                            android:textColorHint="@color/colorNeutral200"
                            android:background="@drawable/form_shape"
                            android:fontFamily="@font/plusjakartasansmedium"
                            android:textSize="16dp"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/field_column_5"
                        android:id="@+id/field_column_6">
                        <TextView
                            android:id="@+id/text7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hubungan dengan nasabah"
                            android:fontFamily="@font/plusjakartasansregular"
                            android:textSize="14dp"
                            android:layout_marginTop="10dp"/>

                        <Spinner
                            android:id="@+id/field_hubungan_nasabah"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_below="@id/text7"
                            android:layout_marginTop="13dp"
                            android:background="@drawable/style_spinner"
                            android:fontFamily="@font/plusjakartasansmedium"
                            android:hint="Input hubungan dengan nasabah"
                            android:textColorHint="@color/colorNeutral200"
                            android:textSize="16dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/field_column_6"
                        android:id="@+id/field_column_7">
                        <TextView
                            android:id="@+id/text8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hasil Kunjungan"
                            android:fontFamily="@font/plusjakartasansregular"
                            android:textSize="14dp"
                            android:layout_marginTop="10dp"/>
                        <EditText
                            android:id="@+id/field_hasil_kunjungan_usaha"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:layout_below="@id/text8"
                            android:layout_marginTop="10dp"
                            android:hint="Input Hasil Kunjungan"
                            android:textColorHint="@color/colorNeutral200"
                            android:background="@drawable/form_shape"
                            android:fontFamily="@font/plusjakartasansmedium"
                            android:textSize="16dp"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"/>

                        <RelativeLayout
                            android:id="@+id/field_foto_kunjungan_usaha"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_below="@+id/field_hasil_kunjungan_usaha">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Foto Kunjungan Usaha"
                                android:layout_marginTop="10dp"
                                android:id="@+id/text_kunjungan_usaha"
                                android:fontFamily="@font/plusjakartasansregular"/>
                            <ImageView
                                android:id="@+id/foto_kunjungan_usaha"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:maxHeight="200dp"
                                android:layout_below="@id/text_kunjungan_usaha"
                                android:layout_centerInParent="true"/>
                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/btn_black"
                                android:layout_marginTop="12dp"
                                android:text="Foto Usaha"
                                android:layout_below="@id/foto_kunjungan_usaha"
                                android:fontFamily="@font/plusjakartasansbold"
                                android:id="@+id/btn_foto_usaha"/>
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/informasi_kunjungan_agunan">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="24dp"
                    android:id="@+id/section3"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/header3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Informasi Kunjungan Agunan Nasabah"
                        android:fontFamily="@font/plusjakartasansrextrabold"
                        android:textSize="16dp"
                        android:textColor="@color/colorBlackHeader"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/header3"
                        android:orientation="vertical"
                        android:id="@+id/field_alamat_agunan">
                        <TextView
                            android:id="@+id/text_alamat_agunan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alamat Agunan"
                            android:fontFamily="@font/plusjakartasansregular"
                            android:textSize="14dp"
                            android:layout_marginTop="10dp"/>
                        <EditText
                            android:id="@+id/field_alamat_agunan_2"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_below="@id/text_alamat_agunan"
                            android:layout_marginTop="10dp"
                            android:hint="Input Alamat Agunan"
                            android:textColorHint="@color/colorNeutral200"
                            android:background="@drawable/form_shape"
                            android:fontFamily="@font/plusjakartasansmedium"
                            android:textSize="16dp"
                            android:paddingStart="15dp"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_below="@+id/field_hasil_kunjungan_2"
                            android:background="@drawable/btn_black"
                            android:layout_marginTop="10dp"
                            android:text="Tag Lokasi"
                            android:fontFamily="@font/plusjakartasansbold"
                            android:id="@+id/btn_tag_lokasi_agunan"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/field_alamat_agunan"
                        android:id="@+id/section_hasil_kunjungan_2">
                        <TextView
                            android:id="@+id/text_hasil_kunjungan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hasil Kunjungan"
                            android:fontFamily="@font/plusjakartasansregular"
                            android:textSize="14dp"
                            android:layout_marginTop="10dp"/>
                        <EditText
                            android:id="@+id/field_hasil_kunjungan_agunan"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:layout_below="@id/text_hasil_kunjungan"
                            android:layout_marginTop="10dp"
                            android:hint="Input Hasil Kunjungan"
                            android:textColorHint="@color/colorNeutral200"
                            android:background="@drawable/form_shape"
                            android:fontFamily="@font/plusjakartasansmedium"
                            android:textSize="16dp"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"/>
                        <RelativeLayout
                            android:id="@+id/field_foto_kunjungan_agunan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_below="@+id/field_hasil_kunjungan_agunan">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Foto Kunjungan Usaha"
                                android:layout_marginTop="10dp"
                                android:id="@id/text_kunjungan_usaha"
                                android:fontFamily="@font/plusjakartasansregular"/>

                            <ImageView
                                android:id="@+id/foto_kunjungan_agunan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/text_kunjungan_usaha"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="12dp"
                                android:maxHeight="200dp" />
                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/btn_black"
                                android:layout_marginTop="12dp"
                                android:layout_below="@id/foto_kunjungan_agunan"
                                android:text="Foto Agunan"
                                android:fontFamily="@font/plusjakartasansbold"
                                android:id="@+id/btn_foto_agunan"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_below="@id/section_hasil_kunjungan_2"
                        android:text="CTA Button"
                        android:layout_marginTop="70dp"
                        android:background="@drawable/btn_primary"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/plusjakartasansbold"
                        android:textSize="16dp"
                        android:id="@+id/submit_btn"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>